<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp" >

        <TextView
            android:id="@+id/community_bar_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#FBC000"
            android:gravity="center_horizontal"
            android:minHeight="64dp"
            android:minWidth="64dp"
            android:paddingLeft="10dp"
            android:text="51"
            android:textColor="@android:color/white"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/community_bar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/community_bar_link"
            android:layout_toRightOf="@+id/community_bar_position"
            android:paddingLeft="10dp"
            android:text="San Antonio, Desamparados"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/community_bar_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#FBC000"
            android:src="@drawable/right_arrow_ico" />
    </RelativeLayout>

    <View
        android:id="@+id/community_separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#FBC000" />

</LinearLayout>